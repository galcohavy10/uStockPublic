<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateAccountActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10sp"
            android:textSize="50sp"
            android:minHeight="48dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ready to Invest in Yourself?" />

        <EditText
            android:id="@+id/editTextFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="20sp"
            android:minHeight="48dp"
            android:background="@drawable/white_text_field"
            android:hint="First Name"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="20sp"
            android:minHeight="48dp"
            android:background="@drawable/white_text_field"

            android:hint="Last Name"
            android:inputType="text"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/white_text_field"

            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:hint="Email"
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:minHeight="48dp"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:hint="Phone Number"
                android:layout_margin="10sp"
                android:textSize="20sp"
                android:minHeight="48dp"/>

        </RadioGroup>

        <EditText
            android:id="@+id/editTextOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/white_text_field"
            android:visibility="gone"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

        <Spinner
            android:id="@+id/dropdown_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:maxLines="2"
            android:ellipsize="none"
            android:textSize="20sp"
            android:padding="8dp"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/editTextOption2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:hint="Phone Number"
            android:textSize="20sp"
            android:minHeight="48dp"
            android:background="@drawable/white_text_field"
            android:visibility="gone"
            android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/green_button"
            android:text="Next" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
